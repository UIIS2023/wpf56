<Window x:Class="WpfKosarkaskiKlub.Forme.Dres"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKosarkaskiKlub.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni Dres" Height="200" Width="300">
    <Grid>
        <Label Content="Boja Dresa:" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBojaDresa" HorizontalAlignment="Left" Height="23" Margin="135,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="180,120,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click"/>
        <Label Content="Kosarkaski Klub:" HorizontalAlignment="Left" Margin="30,63,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbKosarkaskiKlub" HorizontalAlignment="Left" Margin="135,67,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="kosarkaskiKlubID"/>
    </Grid>
</Window>
