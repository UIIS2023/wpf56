        <Label Content="Ime Lige:" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Drzava:" HorizontalAlignment="Left" Margin="30,56,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtImeLige" HorizontalAlignment="Left" Height="23" Margin="142,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDrzava" HorizontalAlignment="Left" Height="23" Margin="143,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Broj Klubova:" HorizontalAlignment="Left" Margin="30,94,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBrojKlubova" HorizontalAlignment="Left" Height="23" Margin="143,97,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
